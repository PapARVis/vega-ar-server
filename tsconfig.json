{
    "compilerOptions": {
        "outDir": "./build",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "preserveConstEnums": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["es6", "dom"],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "rootDir": "src"
    },
    "include": [
        "src/**/*.ts"
    ]
}